{
  "name": "parcel-extension-starter",
  "version": "1.0.0",
  "description": "A TypeScript, Sass and Parcel-bundled browser extension starter project.",
  "main": "index.ts",
  "scripts": {
    "start": "npm run load & npm run page-scripts",
    "load": "parcel watch ./manifest.json --no-hmr",
    "page-scripts": "parcel watch ./scripts/doStuffOnPage.ts --out-dir dist/scripts",
    "build": "parcel build ./manifest.json"
  },
  "keywords": [
    "TypeScript",
    "Parcel",
    "Sass",
    "Extension"
  ],
  "author": "wibjorn@microsoft.com",
  "license": "ISC",
  "devDependencies": {
    "parcel-plugin-web-extension": "^1.4.0",
    "sass": "^1.14.3",
    "typescript": "^3.1.3"
  },
  "dependencies": {
    "@types/chrome": "0.0.74",
    "chromereload": "0.0.2"
  }
}
